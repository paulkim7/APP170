    <div id="anchor"></div>

    <!-- 3. Template -->
    <script id="tpl" type="text/template">
    {{#storeItems}}
    <div class="container-fluid shop-item">
    <h3>{{ItemName}}</h3>
    <img src="../images/{{ItemImage}}" alt="Closet Item Image" height="auto" width="100px" style="margin:auto">
