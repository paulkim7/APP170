  <div class="shop">
    <h1>Shop</h1>
    <h2>Piggy Jr.</h2>
    <img id ="avatar-image" src="../images/piggy-avatar.png" alt="Pig Avatar" width= "50%">
    <div class="info-bar">
      <div class="info"><h3>Total Coins: 0</h3></div>
      <div class="btnContainer info">
        <a class="btn-primary" href="/closet">Closet</a>
      </div>
    </div>
  </div>
</div>

<!-- 2. Anchor -->
<div id="anchor"></div>

<!-- 3. Template -->
<!--<script id="tpl" type="text/template">-->
  {{#storeItems}}

  <div class="item-wrapper" style="display: inline-block;">
  <div class="container-fluid shop-item">
    <h3>{{ItemName}}</h3>
    <img src="{{ItemThumbnail}}" alt="Closet Item Image" height="auto" width="100px" style="margin:auto">
    <img class="item-img" id="itemImg" src="{{ItemImage}}" alt="Closet Item Image" height="auto" width="100px" style="margin:auto">
    <p>{{ItemPrice}} Coins</p>
    <div class="btnContainer">
      <a class="btn-primary try-button" id="{{ItemID}}" data-toggle="modal" data-target="{{ModalTarget}}" onclick="myCanvas()">Try it</a>
      <a class="btn-primary" id="buyButton">Buy it</a>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="{{ModalId}}" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 class="modal-title">Piggy Jr. looks great in {{ItemName}}!</h3>
        </div>
        <div class="modal-body">
          <canvas class="myCanvas" width="350" height="350"
          style="border:1px solid #d3d3d3;">
        </canvas>
      </div>
      <div class="modal-footer btnContainer">
        <a class="btn-primary" data-toggle="modal" data-dismiss="modal">No, thanks</a>
        <a class="btn-primary" href="#">Buy it</a>
      </div>
    </div>

  </div>
</div>
</div>
{{/storeItems}}

